@model CallingCRM.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password? | TeleCalling CRM";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h4>Recover Password</h4>
<h6 class="font-weight-light">Enter your email.</h6>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Email Address" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="mt-3">
        <input type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" value="Email Link" />
    </div>
}
